<div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-3">
	{% for game in games %}
		<div class="border border-blue-500 border-solid flex flex-col">
			<h2 class="text-lg font-bold text-white bg-blue-500 px-2">
				<a href="{{game.url}}" class="">{{game.data.title}}</a>
			</h2>

			<div class="flex m-2 flex-1">
				<div class="w-20 ">
					<a href="{{game.url}}" class="inline-block mr-2 ">
						{% if game.data.image %}
							<img src="/games/{{game.data.image}}" />
						{% else %}
							<div class="w-32 h-32 bg-gray-200">&nbsp;</div>
						{% endif %}
					</a>

				</div>
				<div class="flex-1">
						{% excerpt game %}
				</div>
			</div>
			<div class="my-1 mx-2 text-sm">
				{% for tag in game.data.tags %}
					<a href="/tags/{{tag | slug}}"
					   class="inline-block mr-2 text-blue-600"
					   >{{tag}}</a> 
				{% endfor %}
			</div>
		</div>
	{% endfor %}
</div>
