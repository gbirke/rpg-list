---
layout: layouts/base.liquid
---
<h1 class="mb-4 text-2xl font-bold" >All games</h1>
{% for game in collections.games %}
	<div class="flex mb-12">
		<div class="w-40 ">
			<a href="{{game.url}}" class="inline-block p-1 border border-blue-500 border-dotted">
				<img src="/games/{{game.data.image}}" />
			</a>
		</div>
		<div class="flex flex-col flex-1 ml-4">
				<h2 class="text-lg font-bold">
					<a href="{{game.url}}" class="text-blue-600">{{game.data.title}}</a>
				</h2>
				<div class="flex-1">
					{% excerpt game %}
				</div>
				<div class="order-2 mt-4 mb-4">
					{% for tag in game.data.tags %}
						<a href="#"
						   class="inline-block px-2 mr-1 text-white bg-blue-400 rounded-lg"
							>{{tag}}</a>
					{% endfor %}
				</div>
		</div>
	</div>
{% endfor %}
</ul>
